@model IEnumerable<BT_Buoi2.Models.Product>
@* REMOVE: @inject BT_Buoi2.Repositories.ICategoryRepository CategoryRepository *@
@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}
<h1>Danh Sách Sản Phẩm</h1>
<p>
    <a asp-action="Add" class="btn btn-primary">Thêm Sản Phẩm Mới</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô Tả</th>
            <th>Danh Mục</th>
            <th>Hình Ảnh Chính</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            @* REMOVE: var category = CategoryRepository.GetAllCategories().FirstOrDefault(c => c.Id == product.CategoryId); *@
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
                @* Access Category directly from the product model *@
                <td>@(product.Category?.Name ?? "Không xác định")</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Hình ảnh chính" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>