@model BT_Buoi2.Models.Product
@* REMOVE: @inject BT_Buoi2.Repositories.ICategoryRepository CategoryRepository *@
@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    @* REMOVE: var category = CategoryRepository.GetAllCategories().FirstOrDefault(c => c.Id == Model.CategoryId); *@
}
<h1>Xóa Sản Phẩm</h1>
<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Danh Mục</dt>
        <dd class="col-sm-10">@(Model.Category?.Name ?? "Không xác định")</dd> @* CHANGED LINE *@
        <dt class="col-sm-2">Hình Ảnh Chính</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Hình ảnh chính" style="width: 200px; height: auto;" />
            }
            else
            {
                <span>Không có hình ảnh chính</span>
            }
        </dd>
        <dt class="col-sm-2">Hình Ảnh Bổ Sung</dt>
        <dd class="col-sm-10">
            @if (Model.ImageUrls != null && Model.ImageUrls.Any())
            {
                @* IMPORTANT: Assuming ImageUrls is a collection of ProductImage, and ProductImage has a Url property *@
                @foreach (var productImage in Model.ImageUrls)
                {
                    <img src="@productImage.Url" alt="Hình ảnh bổ sung" style="width: 200px; height: auto; margin-right: 10px;" />
                }
            }
            else
            {
                <span>Không có hình ảnh bổ sung</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>